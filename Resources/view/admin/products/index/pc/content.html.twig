{% trans_default_domain('manufacture-part.admin') %}


<main class="main d-print-none">


    <section class="container px-4 mb-5">

        <div class="mt-3 d-flex justify-content-between">
            {{ include(_self|replace({ "content.html.twig": "_breadcrumb.html.twig" })) }}
        </div>

        {% if info %}


            <div class="d-flex justify-content-between align-items-center mb-3 gap-3">

                <div class="w-100 d-flex gap-3">
                    <h1 class="h4 text-uppercase fw-bolder mb-0">
                        Производственная партия
                    </h1>
                </div>

                <a href="{{ path('manufacture-part:admin.index') }}"
                   class="btn btn-light"
                   role="tooltip"
                   data-bs-toggle="tooltip"
                   data-bs-placement="bottom"
                   data-bs-delay='{"show":600,"hide":100}'
                   title="Производство продукции"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                         class="bi bi-boxes"
                         viewBox="0 0 16 16">
                        <path d="M7.752.066a.5.5 0 0 1 .496 0l3.75 2.143a.5.5 0 0 1 .252.434v3.995l3.498 2A.5.5 0 0 1 16 9.07v4.286a.5.5 0 0 1-.252.434l-3.75 2.143a.5.5 0 0 1-.496 0l-3.502-2-3.502 2.001a.5.5 0 0 1-.496 0l-3.75-2.143A.5.5 0 0 1 0 13.357V9.071a.5.5 0 0 1 .252-.434L3.75 6.638V2.643a.5.5 0 0 1 .252-.434L7.752.066ZM4.25 7.504 1.508 9.071l2.742 1.567 2.742-1.567L4.25 7.504ZM7.5 9.933l-2.75 1.571v3.134l2.75-1.571V9.933Zm1 3.134 2.75 1.571v-3.134L8.5 9.933v3.134Zm.508-3.996 2.742 1.567 2.742-1.567-2.742-1.567-2.742 1.567Zm2.242-2.433V3.504L8.5 5.076V8.21l2.75-1.572ZM7.5 8.21V5.076L4.75 3.504v3.134L7.5 8.21ZM5.258 2.643 8 4.21l2.742-1.567L8 1.076 5.258 2.643ZM15 9.933l-2.75 1.571v3.134L15 13.067V9.933ZM3.75 14.638v-3.134L1 9.933v3.134l2.75 1.571Z"/>
                    </svg>
                </a>

                <a href="{{ path('manufacture-part:admin.manufacture') }}"
                   class="btn btn-light"
                   role="tooltip"
                   data-bs-toggle="tooltip"
                   data-bs-placement="bottom"
                   data-bs-delay='{"show":600,"hide":100}'
                   title="Список производственных партий"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                         class="bi bi-card-checklist" viewBox="0 0 16 16">
                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                        <path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
                    </svg>
                </a>


                {# <div>
                    <a href="{{ path('manufacture-part:admin.newedit.new') }}"
                       class="btn modal-btn modal-link disabled btn-primary text-nowrap" data-bs-toggle="modal"
                       data-bs-target="#modal"
                       title="Открыть поставку">
                        Добавить партию
                    </a>
                </div> #}
            </div>


            <div class="card card-flush alert alert-warning p-0 w-100 "
                 style="background-image: var(--bs-gradient);">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="w-75 d-flex gap-3 align-items-center">

                        <span
                                role="tooltip"
                                data-bs-toggle="tooltip"
                                data-bs-placement="bottom"
                                data-bs-delay='{"show":600,"hide":100}'
                                title='QR производственной партии'
                        >
                <a
                        href="{{ path('manufacture-part:admin.qrcode', { id : info.id, print: true }) }}"
                        class="btn-link btn p-0 modal-link disabled icon prnt"
                        data-bs-toggle="modal"
                        data-bs-target="#modal"
                        style="height: 55px; width: 55px;"
                >
                    <svg
                            xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor"
                            class="bi bi-qr-code" viewBox="0 0 16 16"><path d="M2 2h2v2H2V2Z"></path><path
                                d="M6 0v6H0V0h6ZM5 1H1v4h4V1ZM4 12H2v2h2v-2Z"></path><path
                                d="M6 10v6H0v-6h6Zm-5 1v4h4v-4H1Zm11-9h2v2h-2V2Z"></path><path
                                d="M10 0v6h6V0h-6Zm5 1v4h-4V1h4ZM8 1V0h1v2H8v2H7V1h1Zm0 5V4h1v2H8ZM6 8V7h1V6h1v2h1V7h5v1h-4v1H7V8H6Zm0 0v1H2V8H1v1H0V7h3v1h3Zm10 1h-1V7h1v2Zm-1 0h-1v2h2v-1h-1V9Zm-4 0h2v1h-1v1h-1V9Zm2 3v-1h-1v1h-1v1H9v1h3v-2h1Zm0 0h3v1h-2v1h-1v-2Zm-4-1v1h1v-2H7v1h2Z"></path><path
                                d="M7 12h1v3h4v1H7v-4Zm9 2v2h-3v-1h2v-1h1Z"></path>
                    </svg>
                </a>
            </span>

                        <div>

                            <div>
                                <small class="opacity-50">Номер:</small> &nbsp;

                                <a href="#"
                                   class="fw-bolder text-decoration-none">
                                    {{ info.number }}
                                </a>
                            </div>


                            <div>
                                <small class="opacity-50">Отвественный:</small> &nbsp;
                                <strong>{{ info.users_profile_username }}</strong>
                            </div>

                            {# <div>
                                <small class="opacity-50">Всего продукции:</small> &nbsp;
                                <strong id="total-{{ info.event }}">{{ info.quantity }}</strong> шт.
                            </div> #}
                            <div>
                                <small class="opacity-50">Всего продукции:</small> &nbsp;
                                <strong>{{ info.quantity }}</strong> шт.
                            </div>

                        </div>
                    </div>

                    <div id="product-0189a62f-cf53-7f6d-9162-3b5705ce3dcf" class="w-100">
                        <div>
                            <small class="opacity-50">Категория:</small> &nbsp;
                            <strong>{{ info.category_name }}</strong>
                        </div>

                        <div>
                            <small class="opacity-50">Производственный процесс:</small> &nbsp;
                            <strong>{{ info.action_name }}</strong>
                        </div>


                        <div>
                            <small class="opacity-50">Завершающий этап:</small> &nbsp;
                            <strong>{{ info.complete ? info.complete|trans({}, 'manufacture.complete') : 'Ничего не делать' }}</strong>
                        </div>


                    </div>

                    <div class="text-end">


                        {% if info.status == 'open' and is_granted('ROLE_MANUFACTURE_PART_NEW') %}

                            <a href="{{ path('manufacture-part:admin.package', { id: info.id }) }}"
                               id="close_supply_btn"
                               class="btn modal-btn btn-danger modal-link disabled text-nowrap"
                               data-bs-toggle="modal" data-bs-target="#modal"
                               title="Отправить партию на производственную линию"
                            >
                                Отправить на производство
                            </a>


                        {% else %}

                            <div class="text-nowrap">
                                {{ manufacture_status(info.status) }}
                            </div>
                        {% endif %}


                    </div>
                </div>
            </div>
        {% endif %}


        <div class="border border-light rounded-4 p-3 mb-3">

            <div class="d-flex justify-content-between">

                {% include Template('/_includes/'~baks_settings.device~'/search.html.twig') %}

                {# Фильтр по продукции #}
                <div class="w-100">
                    {% include Template('@products-product/filter/'~baks_settings.device~'/filter.html.twig') %}
                </div>


            </div>

            {# Текстовый результат фильтра #}
            {% include Template('@products-product/filter/'~baks_settings.device~'/filter_text.html.twig') %}

            <div class="row cards-box-body mt-3">
                {% for item in query.data %}

                    {{ include(_self|replace({ "content.html.twig": "card.html.twig" })) }}

                {% else %}

                <div class="alert alert-warning m-3 w-100" role="alert">

                    <div class="d-flex align-items-baseline gap-3">
                        <div>
                            <div class="icon rounded-circle bg-contain p-2 bg-primary text-white"
                                 style="width: 10px; height: 10px;"><span class="small">!</span></div>
                        </div>
                        <div class="small lh-1">
                            Информация по данному запросу отсутствует
                        </div>
                    </div>

                </div>
                {% endfor %}
            </div>

        </div>

        {% include Template('_includes/'~baks_settings.device~'/pagination.html.twig') with { 'pagination' : query } %}

    </section>

</main>
