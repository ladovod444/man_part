{% trans_default_domain 'manufacture-part.admin' %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 800px;">

    <div class="modal-content p-3 border-bottom border-5 border-success">
        <div class="modal-header">

            <h5 class="modal-title">
                {# Заголовок модального окна #}
                Производственная партия #{{ part.number }} выполнена
            </h5>

            <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                <span class="svg-icon svg-icon-2x"></span>
            </div>
        </div>

        <div class="modal-body d-flex gap-3 align-items-center">

            <div>
                <img src='{{ qrcode }}' alt='QR Code' class="icon" style="width: 150px; height: 150px;">
            </div>

            <div class="p-3">
                {% for working in all %}
                    <div class="d-flex align-items-center gap-3 ">
                            <span class="text-success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                     fill="currentColor" class="bi bi-check-square-fill" viewBox="0 0 16 16">
                                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/>
                                </svg>
                            </span>
                        <strong>{{ working.working_name }}</strong> {{ working.users_profile_username }}
                    </div>
                {% endfor %}
            </div>

        </div>

        <div class="modal-footer justify-content-between">

            <div> Количество: <strong class="">{{ part.quantity }} шт.</strong></div>

            {# Отмена #}
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                {{ 'btn.close'|trans({}, 'core.btn') }}
            </button>
        </div>
    </div>

</div>
